<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Weather App</title>
</head>
<body>
  <h1>Weather App</h1>

  <form id="weatherForm">
    <input id="city" type="text" placeholder="Enter city">
    <button>Get Weather</button>
  </form>

  <div id="weather" style="margin-top:20px;color:red;"></div>

  <script>
    const weatherForm = document.getElementById("weatherForm");
    const cityInput = document.getElementById("city");

    const weatherDisplay = document.getElementById("weather");

    weatherForm.addEventListener("submit", (e) => {
      e.preventDefault();

      const city = cityInput.value.trim();

      if (city.length === 0) {
        weatherDisplay.textContent = "City name cannot be empty.";
        return;
      }

      fetchWeather(city);
    });

    async function fetchWeather(city) {
      try {
        const response = await fetch(`https://api.openweathermap.org/data/2.5/weather?q=${city}&appid=YOUR_API_KEY&units=metric`);

        if (!response.ok) {
          throw new Error("City not found.");
        }

        const data = await response.json();

        weatherDisplay.style.color = "green";

        weatherDisplay.textContent = `Weather in ${data.name}: ${data.main.temp}Â°C, ${data.weather[0].description}`;
      } catch (error) {
        weatherDisplay.style.color = "red";

        weatherDisplay.textContent = error.message;
      }
    }
  </script>
</body>
</html>
