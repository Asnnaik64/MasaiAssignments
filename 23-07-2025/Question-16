<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Product Grid View</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
    }

    .grid-container {
      display: grid;
      grid-template-columns: repeat(3, 1fr);
      gap: 20px;
    }

    .product-card {
      padding: 15px;
      border-radius: 8px;
      color: white;
      box-shadow: 0 0 5px rgba(0,0,0,0.2);
    }

    .in-stock {
      background-color: green;
    }

    .out-of-stock {
      background-color: red;
    }

    .product-name {
      font-size: 18px;
      font-weight: bold;
    }

    .product-price {
      margin: 8px 0;
    }
  </style>
</head>
<body>

  <h1>Product Grid View</h1>

  <div class="grid-container" id="productGrid"></div>

  <script>
    const products = [
      { id: 1, name: "Product A", price: 50, inStock: true },
      { id: 2, name: "Product B", price: 30, inStock: false },
      { id: 3, name: "Product C", price: 70, inStock: true },
      { id: 4, name: "Product D", price: 20, inStock: false }
    ];

    const grid = document.getElementById('productGrid');

    products.forEach(product => {
      const card = document.createElement('div');
      card.classList.add('product-card');
      card.classList.add(product.inStock ? 'in-stock' : 'out-of-stock');

      const name = document.createElement('div');
      name.className = 'product-name';
      name.textContent = product.name;

      const price = document.createElement('div');
      price.className = 'product-price';
      price.textContent = "Price: $" + product.price;

      const stockLabel = document.createElement('div');
      stockLabel.textContent = product.inStock ? "In Stock" : "Out of Stock";

      card.appendChild(name);
      card.appendChild(price);
      card.appendChild(stockLabel);

      grid.appendChild(card);
    });
  </script>

</body>
</html>
